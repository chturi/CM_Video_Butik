@model CM_Video_Butik.Models.CustomerModel

@{
    ViewBag.Title = "Rent/Return";
}

<h2> Rented movies by: @(Model.FirstName + " " + Model.LastName) </h2>

<p>
    @Html.ActionLink("Rent a new movie", "Rent", new {customerId = Model.CustomerID}) 

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Genre")
        </th>
        <th>
            @Html.DisplayName("Quantity in Stock")
        </th>
    </tr>

@if (Model.RentedMovies.ToList() != null)
{
    foreach (var item in Model.RentedMovies)
    {
    <tr>
        <td>
            @item.Title
        </td>
        <td>
            @item.Genre
        </td>
         <td>
            @(item.QuantityTotalStock-item.QuantityRented)
        </td>
        <td>
            @Html.ActionLink("Return", "Return", new { id = item.MovieID })
        </td>
    </tr>
    }
}

</table>
